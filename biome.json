{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true,
		"ignore": ["lib", "dist", "node_modules"]
	},
	"formatter": {
		"enabled": true,
		"ignore": ["lib", "dist", "node_modules"]
	},
	"linter": {
		"ignore": ["lib", "dist", "node_modules"],
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": { "useLiteralKeys": "off" }
		}
	}
}
